{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"types": ["element-plus/global", "vite/client", "vitest/globals"],
		"paths": {
			"~/*": [
				"./src/*"
			],
			"@/*": [
				"./src/*"
			]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "vite-env.d.ts", "vite-env.d.ts", "vite-env.d.ts", "src/shims-vue.d.ts"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
